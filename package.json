{
  "name": "nostrcord-desktop",
  "version": "1.3.0",
  "description": "NostrCord v13 \u2014 Electron app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.nostrcord.desktop",
    "productName": "NostrCord",
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "nostr-tools": "^1.17.0"
  }
}